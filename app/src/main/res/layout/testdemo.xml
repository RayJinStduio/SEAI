<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/button_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="path"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:onClick="b_path"/>

    <Button
        android:id="@+id/button_res"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="动物"
        app:layout_constraintTop_toBottomOf="@id/button_path"
        app:layout_constraintLeft_toLeftOf="@id/button_path"
        android:onClick="b_res_an"/>
    <Button
        android:id="@+id/button_res_P"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="植物"
        app:layout_constraintTop_toBottomOf="@id/button_path"
        app:layout_constraintLeft_toRightOf="@id/button_path"
        android:onClick="b_res_p"/>

    <TextView
        android:id="@+id/test_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/button_res"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="path" />

    <TextView
        android:id="@+id/test_res"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="res"
        app:layout_constraintTop_toBottomOf="@id/test_path"
        app:layout_constraintLeft_toLeftOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>